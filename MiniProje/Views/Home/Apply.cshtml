@model MiniProje.Models.Anket;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apply</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>
<body>
    <div class="container m-4">
        <div class="card mx-auto" style="width:500px;">
            <div class="card-header">
               Başvuru Formu
            </div>
            <div class="card-body">

                <form asp-action="apply" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Name">Adınız:</label>
                        <input asp-for="Name" class="form-control" placeholder="Adınızı Giriniz." />
                    </div>
                    <div class="form-group">
                        <label asp-for="SurName">Soyadınız:</label>
                        <input asp-for="SurName" class="form-control" placeholder="Soyadınızı Giriniz." />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">E-Posta Adresiniz:</label>
                        <input asp-for="Email" class="form-control" placeholder="Mail Adresinizi Giriniz." />
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone">Tel:</label>
                        <input asp-for="Phone" class="form-control" placeholder="Telefon Numarası Giriniz." />
                    </div>
                    <div class="form-group">
                        <label asp-for="Confirm">Ankete Katılacak mısınız?</label>
                        <select asp-for="Confirm" class="form-control">
                            <option value="">Seçiniz..</option>
                            <option value="true">Evet, katılacağım.</option>
                            <option value="false">Hayır, katılmayacağım.</option>
                        </select>
                    </div>

                    <input type="submit" class="btn btn-primary btn-block" value="Submit" />
                </form>
            </div>
        </div>
    </div>


</body>
</html>
